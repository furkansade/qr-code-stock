<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>StockQr - Giriş</title>

    <!-- Custom styles -->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="icon" href="https://sadesoftware.com/wp-content/uploads/2024/09/cropped-Sade-Software-Favicon-1-192x192.png" sizes="192x192">

    <style>
        /* Sağ üst köşede gösterim */
        .alert-custom {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1050;
            width: 300px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }
    
        /* Yılan animasyonu */
        .alert-custom::before,
        .alert-custom::after {
            content: '';
            position: absolute;
            background-color: #007bff;
            height: 3px;
            width: 100%;
        }
    
        .alert-custom::before {
            top: 0;
            left: 0;
            animation: borderAnimation 4s linear infinite;
        }
    
        .alert-custom::after {
            bottom: 0;
            right: 0;
            height: 100%;
            width: 3px;
            animation: borderAnimation 4s linear infinite reverse;
        }
    
        @keyframes borderAnimation {
            0% { transform: translateX(0) translateY(0); }
            25% { transform: translateX(100%) translateY(0); }
            50% { transform: translateX(100%) translateY(100%); }
            75% { transform: translateX(0) translateY(100%); }
            100% { transform: translateX(0) translateY(0); }
        }
    </style>
</head>

<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-6 col-md-6">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="container mt-3">
                            <% if (flashMessages) { %>
                                <div class="col-md-12">
                                    <% if (flashMessages.success) { %>
                                        <div class="alert alert-success alert-custom alert-dismissible fade show" role="alert">
                                            <%= flashMessages.success %>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    <% } else if (flashMessages.error) { %>
                                        <div class="alert alert-danger alert-custom alert-dismissible fade show" role="alert">
                                            <%= flashMessages.error %>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    <% } else if (flashMessages.update) { %>
                                        <div class="alert alert-warning alert-custom alert-dismissible fade show" role="alert">
                                            <%= flashMessages.update %>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    <% } %>
                                </div>
                            <% } %>
                        </div>

                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">StockQr Yazılım</h1>
                                </div>
                                <form class="user" method="post" action="/auth/login">
                                    <div class="form-group">
                                        <input type="email" name="email" class="form-control form-control-user" placeholder="Eposta Adresi">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="password" class="form-control form-control-user" placeholder="Şifre">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">Giriş Yap!</button>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="#">Şifremi Unuttum!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>

    <script>
        // Alerti 4 saniye sonra gizle
        setTimeout(function() {
            var alertElement = document.querySelector('.alert-custom');
            if (alertElement) {
                alertElement.style.display = 'none';
            }
        }, 4000);
    </script>

</body>

</html>